<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_envelope2" >"
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="48dp"
    android:paddingRight="48dp"
    android:paddingTop="28dp"
    android:paddingBottom="28dp" >
    
    <TextView
        style="@style/TravelDataTitle"
        android:id="@+id/textTravleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTravleTitle"
        android:paddingTop="8dp"
        android:orientation="horizontal" >
        
        <include
            layout="@layout/photo_with_frame"
            android:layout_width="109dp"
            android:layout_height="130dp"/>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="12dp"
	        android:orientation="vertical" >
	        
		    <TextView
       			style="@style/TravelDataText"
		        android:id="@+id/textOrganizer"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
	        
		    <TextView
       			style="@style/TravelDataText"
		        android:id="@+id/textTravelLocation"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
            
		    <TextView
       			style="@style/TravelDataText"
		        android:id="@+id/textTravelTime"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
            
		    <TextView
       			style="@style/TravelDataText"
		        android:id="@+id/textPartner"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
	            
	    </LinearLayout>
        
    </LinearLayout>
    
</RelativeLayout>

</RelativeLayout>
